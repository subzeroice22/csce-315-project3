<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBoxPreference
  	android:key="@string/app_name"
  	android:title="@string/show_hints"
  	android:summary="@string/show_hints_description"
  	android:defaultValue="true"/>
  <CheckBoxPreference
  	android:key="@string/is_droid_opponent"
  	android:title="@string/is_droid_opponent"
  	android:summary="@string/is_droid_opponent_description"
  	android:defaultValue="true"/>
  <ListPreference 
      android:entries="@array/levels" 
      android:entryValues="@array/level_values" 
      android:key="@string/difficulty_level" 
      android:title="@string/difficulty_title" android:summary="@string/difficulty_summary" android:defaultValue="@array/level_values"/>	
</PreferenceScreen>
